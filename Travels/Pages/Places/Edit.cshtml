@page
@model Travels.Pages.Places.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<div>
    <form method="post" enctype="multipart/form-data">
        <input asp-for="Place.Id" hidden />
        <input hidden asp-for="Place.UserId" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class=" border  backgroundWhite">
            <h2 class="text-info">Edytuj podróż</h2><br/>
            <div class="form-group row">
                <div class="col-1">
                    <label>Kraj</label>
                </div>
                <div class="col-4">
                    <input asp-for="Place.Country" class="form-control" />
                </div>
                <div class="col-6 offset-1">
                    <img src="@Model.Place.Image" style="border-radius:5px;border :1px solid #bbb9b9; width:83.5%; position: absolute;" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-1">
                    <label>Miejsce</label>
                </div>
                <div class="col-4">
                    <input asp-for="Place.Locality" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-1">
                    <label>Typ</label>
                </div>
                <div class="col-4">
                    <select asp-for="Place.TravelTypeId"
                            asp-items="@(new SelectList(Model.PlacesAndUserVM.TravelTypesList,"Id","Name"))"
                            class="form-control"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-1">
                    <label>Ocena</label>
                </div>
                <div class="col-4">
                    <input asp-for="Place.Rating" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-1">
                    <label>Opis</label>
                </div>
                <div class="col-4">
                    <textarea asp-for="Place.Description" class="form-control" rows="14"></textarea>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-1">
                    <label asp-for="Place.Image" class="custom-label"></label>
                </div>
                <div class="col-4">
                    <input type="file" name="files" class="form-control" asp-for="Place.Image" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4 offset-1">
                    <partial name="_EditAndBackToListButton" />
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");}
}
